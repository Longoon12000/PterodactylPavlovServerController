@page
@model RegisterModel

<div class="page h-100">
    <main class="bg-dark h-100">
        <div class="top-row navbar-dark px-4 pt-5 justify-content-center d-flex">
            <h1>Register</h1>
        </div>
        <div class="w-100 p-4 d-flex justify-content-center pb-4">
            <article class="content px-4 col-lg-4 col-xl-3 col-10 col-md-8 col-sm-12">
                <section>
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <h2>Register using your Pterodactyl account</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating mb-2">
                            <input asp-for="Input.Username" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.Username"></label>
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-2">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                            <label asp-for="Input.Password"></label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-2">
                            <input asp-for="Input.PterodactylApiKey" class="form-control" autocomplete="new-password" aria-required="true" />
                            <label asp-for="Input.PterodactylApiKey"></label>
                            <span asp-validation-for="Input.PterodactylApiKey" class="text-danger"></span>
                        </div>
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                    </form>
                </section>
            </article>
        </div>
    </main>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
